---
// component imports
import MainLayout from "../layouts/MainLayout.astro";
import PostCard from "../components/PostCard.astro";
import Link from "../components/Link.astro";
import { formatBlogPosts } from "../js/utils";

const allPosts = await Astro.glob("./blog/*.md");
const formattedPosts = formatBlogPosts(allPosts, {
  limit: 3,
});
---

<MainLayout title="My Blog">
  <section class="container" aria-label="New Blog Posts">
    <div class="bg-img">
      <a href="/contact" class="bg-gradient-to-br from-gray-300 to-gray-800 hover:bg-gradient-to-tl text-white rounded px-4 py-2">contact</a>
    </div>
    <h2 class="h2 text-center">New Blog Posts</h2>
    <div class="post-container">
      {
        formattedPosts.map((post) => <PostCard frontmatter={post.frontmatter}
        url={post.url} tagType="h3"/>)
      }
    </div>
  </section>
</MainLayout>

<style>
.bg-img {
  width: 100%;
  height: 1080px;


  background: url(../public/images/Hero06.png) no-repeat center cen cover ;
}
</style>


